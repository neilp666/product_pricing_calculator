 <div class="progress">
  <div class="bar"></div>
</div>

<section class="day">
    <h1><%= "To make #{number_to_currency @product.revenue}" %></h1>
     <p><%= "You need to make #{number_to_currency @product.monthly_amount} a month" %><br/>
        <%= "You need to make #{number_to_currency @product.daily_amount} a day" %>
    </p>
    <br/>
    <i class="fa fa-chevron-down" aria-hidden="true"></i>
</section>

<section class="people"> 

    <h1>If you create & sell a product</h1>
        <p><%= "10,000 people to buy #{number_to_currency @product.create_and_sell_product_10000} product" %><br/>

        <%= "5,000 people to buy #{number_to_currency @product.create_and_sell_product_5000} product" %><br/>

        <%= "2,000 people to buy #{number_to_currency @product.create_and_sell_product_2000} product" %><br/>

        <%= "1,000 people to buy #{number_to_currency @product.create_and_sell_product_1000} product" %><br/>

        <%= "100 people to buy #{number_to_currency @product.create_and_sell_product_100} product" %>
        </p>
</section>


<section class="monthly">

    <h2><%= "If you setup a monthly subscription" %></h2>
    <p class="lead"><%= "Get 5,000 people to pay #{number_to_currency @product.monthly_subscription_5000} per month for #{@product.months} months" %><br/>

    <%= "Get 2,000 people to pay #{number_to_currency @product.monthly_subscription_2000 }  per month for #{@product.months} months" %><br/>

    <%= "Get 1,000 people to pay #{number_to_currency @product.monthly_subscription_1000}  per month for #{@product.months} months" %><br/>

    <%= "Get 500 people to pay #{number_to_currency @product.monthly_subscription_500}  per month for #{@product.months} months" %><br/>

    <%= "Get 300 people to pay #{number_to_currency @product.monthly_subscription_300 }  per month for #{@product.months} months" %></p>

    <%= link_to 'Try again', root_path , class: "btn btn-danger" %>
 </section>


